// Run this code on https://dbdiagram.io/d
Table users_credential as UC {
  id int [pk, increment] // auto-increment
  login varchar
  passwd timestamp
  temp_passwd int
  token_auth varchar
}

Table user_profile as UP {
  id int [pk]
  name varchar
  photo object
}

Table chats {
  id int [pk]
  name varchar
}

Table massages {
  id int [pk, increment]
  text varchar
  sender int
  chat id
  data timestamp
}

Table users_in_chat {
  chat_id int [pk]
  user_id int
}

Table user_contact_list {
  user_id int [pk]
  contact int
}

Ref: "massages"."chat" < "chats"."id"

Ref: "users_credential"."id" < "user_profile"."id"

Ref: "massages"."sender" < "users_credential"."id"

Ref: "chats"."id" < "users_in_chat"."chat_id"

Ref: "user_contact_list"."user_id" < "users_credential"."id"
