// Run this code on https://dbdiagram.io/d

Table users_credential {
  user_id int [pk, increment] // auto-increment
  login text
  passwd text
  temp_passwd text
  token_auth text
}

Table user_profile {
  user_id int
  name text
  photo object
  letter_delay int
}

Table massages {
  id int [pk, increment]
  message text
  sender_id int
  receiver_id int
  chat_id int
  is_sent int
  delivery_date timestamp
  date timestamp
}

Table user_contact_list {
  user_id int 
  contact int
}

Ref: "users_credential"."user_id" < "user_profile"."user_id"

Ref: "massages"."sender_id" > "users_credential"."user_id"

Ref: "massages"."receiver_id" > "users_credential"."user_id"

Ref: "user_contact_list"."user_id" > "users_credential"."user_id"
