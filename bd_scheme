
// Run this code on https://dbdiagram.io/d
Table users_credential as UC {
  user_id int [pk, increment] // auto-increment
  login varchar
  passwd varchar
  temp_passwd varchar
  token_auth varchar
}

Table user_profile as UP {
  user_id int [pk]
  name varchar
  photo object
}

Table chats {
  chat_id int [pk, increment]
  name varchar
}

Table massages {
  id int [pk, increment]
  text varchar
  user_id int
  chat_id int
  date timestamp
}

Table users_in_chat {
  chat_id int [pk]
  user_id int
}

Table user_contact_list {
  user_id int [pk]
  contact int
}

Ref: "massages"."chat_id" < "chats"."chat_id"

Ref: "users_credential"."user_id" < "user_profile"."user_id"

Ref: "massages"."user_id" < "users_credential"."user_id"

Ref: "chats"."chat_id" < "users_in_chat"."chat_id"

Ref: "user_contact_list"."user_id" < "users_credential"."user_id"
